@model ProjectMan.Models.Menu

@{
    ViewBag.Title = "Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h2>Güncelle</h2>
</div>

<form action="@Model.id" method="post">
    <div class="form-group row">
        <div class="col-sm-12">
            <label for="icon" class="col-sm-2 form-control-label">Icon :</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="icon" name="icon" placeholder="Icon" value="@Model.icon">
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-12">
            <label for="text" class="col-sm-2 form-control-label">Text :</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="text" name="text" placeholder="Text" value="@Model.text">
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-12">
            <label for="controller" class="col-sm-2 form-control-label">Controller :</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="controller" name="controller" placeholder="Controller" value="@Model.controller">
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-12">
            <label for="action" class="col-sm-2 form-control-label">Action :</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="action" name="action" placeholder="Action" value="@Model.action">
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary"> Kaydet </button> <a href="/Menu/Index" class="btn btn-primary">Geri Dön</a>
</form>