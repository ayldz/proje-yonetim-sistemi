@model ProjectMan.Models.User

@{
    ViewBag.Title = "Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ProjectMan.Helpers.UserPositions Position = (ProjectMan.Helpers.UserPositions)Model.position;
}

<div class="page-header">
    <h2>Güncelle: @Model.name</h2>
</div>

<form action="@Model.id" method="post">
    <div class="form-group row">
        <div class="col-sm-12">
            <label for="userName" class="col-sm-2 form-control-label">Kullanıcı Adı :</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="userName" name="userName" placeholder="Kullanıcı Adı" value="@Model.username">
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-12">
            <label for="password" class="col-sm-2 form-control-label">Şifre :</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="password" name="password" placeholder="Şifre" value="@Model.password">
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-12">
            <label for="name" class="col-sm-2 form-control-label">Ad :</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="name" name="name" placeholder="Ad" value="@Model.name">
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-12">
            <label for="soyad" class="col-sm-2 form-control-label">Soyad :</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="soyad" name="soyad" placeholder="Soyad" value="@Model.surname">
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-12">
            <label for="pozisyon" class="col-sm-2 form-control-label">Pozisyon :</label>
            <div class="col-sm-10">
         
                    <select class="form-control select select-primary select-block mbl select2" name="pozisyon">
                        <option value="0" @if (Position == ProjectMan.Helpers.UserPositions.Admin) { <text> selected </text>  }> Admin </option>
                        <option value="1" @if (Position == ProjectMan.Helpers.UserPositions.ProjectManager) { <text> selected </text>   }> Proje Yöneticisi </option>
                        <option value="2" @if (Position == ProjectMan.Helpers.UserPositions.Developer) { <text> selected </text>   }> Yazılım Geliştirici </option>
                        <option value="3" @if (Position == ProjectMan.Helpers.UserPositions.Customer) { <text> selected </text>   }> Müşteri </option>
                    </select>
                </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary"> Kaydet </button> <a href="/User/Index" class="btn btn-primary">Geri Dön</a>
</form>
