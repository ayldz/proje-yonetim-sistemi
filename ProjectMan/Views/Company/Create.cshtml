
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h2>Create</h2>
</div>

<form action="Create" method="post">
    <div class="form-group row">
        <div class="col-sm-12">
            <label for="companyName" class="col-sm-2 form-control-label">Ad :</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="companyName" name="companyName" placeholder="Şirket Adı">
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-12">
            <label for="companyAdress" class="col-sm-2 form-control-label">Adres :</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="companyAdress" name="companyAdress" placeholder="Adres">
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-12">
            <label for="billedTo" class="col-sm-2 form-control-label">Fatura :</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="billedTo" name="billedTo" placeholder="Fatura">
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-12">
            <label for="contactName" class="col-sm-2 form-control-label">Yetkili Kişi :</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="contactName" name="contactName" placeholder="İsim">
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-12">
            <label for="contactEmail" class="col-sm-2 form-control-label">Yetkili Kişi e-Posta :</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="contactEmail" name="contactEmail" placeholder="e-Posta">
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-12">
            <label for="contactTel" class="col-sm-2 form-control-label">Yetkili Kişi Telefon :</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="contactTel" name="contactTel" placeholder="e-Posta">
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary"> Kaydet </button>
</form>
