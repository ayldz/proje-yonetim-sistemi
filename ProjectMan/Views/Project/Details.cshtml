@model ProjectMan.Models.Project

@{
    ViewBag.Title = "Detay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h2>Detay: @Model.name</h2>
</div>

<div class="form-group row">
    <div class="col-sm-12">
        <label for="progress" class="col-sm-2 form-control-label">İlerleme Durumu :</label>
        <div class="col-sm-10">
            <div class="progress">
                <div class="progress-bar" role="progressbar" aria-valuenow=" @Model.progress "
                     aria-valuemin="0" aria-valuemax="100" style="width:@Model.progress%">
                    <span class="sr-only">%@Model.progress </span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-12">
        <label for="projectName" class="col-sm-2 form-control-label">Proje Adı :</label>
        <div class="col-sm-10">
            @Model.name
        </div>
    </div>
</div>

<div class="row">
    <div class="form-group col-sm-6">
        <label for="startDatePlanned" class="col-sm-4 form-control-label">Planlanan Başlangıç Tarihi :</label>
        <div class="col-sm-8">
            @Model.startdateplanned.ToString("dd'/'MM'/'yyyy")
        </div>
    </div>

    <div class="form-group col-sm-6">
        <label for="startDateActual" class="col-sm-4 form-control-label">Gerçekleşen Başlangıç Tarihi :</label>
        <div class="col-sm-8">
            @Model.stardateactual.ToString("dd'/'MM'/'yyyy")
        </div>
    </div>
</div>

<div class="row">
    <div class="form-group col-sm-6">
        <label for="endDatePlanned" class="col-sm-4 form-control-label">Planlanan Bitiş Tarihi :</label>
        <div class="col-sm-8">
            @Model.enddateplanned.ToString("dd'/'MM'/'yyyy")
        </div>
    </div>

    <div class="form-group col-sm-6">
        <label for="endDateActual" class="col-sm-4 form-control-label">Gerçekleşen Bitiş Tarihi :</label>
        <div class="col-sm-8">
           @Model.enddateactual.ToString("dd'/'MM'/'yyyy")
        </div>
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-12">
        <label for="company" class="col-sm-2 form-control-label">Şirket :</label>
        <div class="col-sm-10">
            @Model.company
        </div>
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-12">
        <label for="projectManager" class="col-sm-2 form-control-label">Proje Yöneticisi :</label>
        <div class="col-sm-10">
             @Model.projectmanager
        </div>
    </div>
</div>

<a href="/Project/Index" class="btn btn-primary">Geri Dön</a>