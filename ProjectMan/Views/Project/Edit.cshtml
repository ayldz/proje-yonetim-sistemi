@model ProjectMan.Models.Project

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-header">
    <h2>Edit</h2>
</div>

<form action="@Model.id" method="post">
    <div class="form-group row">
        <div class="col-sm-12">
            <label for="projectName" class="col-sm-2 form-control-label">Proje Adı :</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="projectName" name="projectName" placeholder="Yeni Proje" value="@Model.name">
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-sm-6">
            <label for="startDatePlanned" class="col-sm-4 form-control-label">Planlanan Başlangıç Tarihi :</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="startDatePlanned" name="startDatePlanned" placeholder="Tarih" data-type="date" value="@Model.startdateplanned">
            </div>
        </div>

        <div class="form-group col-sm-6">
            <label for="startDateActual" class="col-sm-4 form-control-label">Gerçekleşen Başlangıç Tarihi :</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="startDateActual" name="startDateActual" placeholder="Tarih" data-type="date" value="@Model.stardateactual">
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-sm-6">
            <label for="endDatePlanned" class="col-sm-4 form-control-label">Planlanan Bitiş Tarihi :</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="endDatePlanned" name="endDatePlanned" placeholder="Tarih" data-type="date" value="@Model.enddateplanned">
            </div>
        </div>

        <div class="form-group col-sm-6">
            <label for="endDateActual" class="col-sm-4 form-control-label">Gerçekleşen Bitiş Tarihi :</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="endDateActual" name="endDateActual" placeholder="Tarih" data-type="date" value="@Model.enddateactual">
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-12">
            <label for="progress" class="col-sm-2 form-control-label">İlerleme Durumu :</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="progress" name="progress" placeholder="İlerleme Durumu" value="@Model.progress">
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-12">
            <label for="company" class="col-sm-2 form-control-label">Şirket :</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="company" name="company" placeholder="Şirket" value="@Model.company">
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-12">
            <label for="projectManager" class="col-sm-2 form-control-label">Proje Yöneticisi :</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="projectManager" name="projectManager" placeholder="Proje Yöneticisi" value="@Model.projectmanager">
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary"> Kaydet </button>
</form>
