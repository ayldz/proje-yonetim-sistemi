@model ProjectMan.Models.Milestone

@{
    ViewBag.Title = "Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h2>Güncelle: @Model.name</h2>
</div>

<form action="@Model.id" method="post">
    <div class="form-group row">
        <div class="col-sm-12">
            <label for="milestoneName" class="col-sm-1 form-control-label">Adı:</label>
            <div class="col-sm-11">
                <input type="text" class="form-control" id="milestoneName" name="milestoneName" placeholder="Yeni Kilometre Taşı" value="@Model.name">
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-sm-6">
            <label for="progress" class="col-sm-2 form-control-label">İlerleme Durumu :</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="progress" name="progress" placeholder="İlerleme Durumu (0-100)" value="@Model.progress">
            </div>
        </div>

        <div class="form-group col-sm-6">
            <label for="proje" class="col-sm-2 form-control-label">Proje :</label>
            <div class="col-sm-10">
                @{Html.RenderAction("RenderOption", "Project", new { name = "project", value = Model.project });}
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary"> Kaydet </button> <a href="/Milestone/Index" class="btn btn-primary">Geri Dön</a>

</form>