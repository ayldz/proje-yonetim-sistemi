@model ProjectMan.Models.Milestone

@{
    ViewBag.Title = "Detay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h2>Detay: @Model.name</h2>
</div>


<div class="form-group row">
    <div class="col-sm-12">
        <label for="milestoneName" class="col-sm-1 form-control-label">İlerleme Durumu:</label>
        <div class="col-sm-11">
            <div class="progress">
                <div class="progress-bar" role="progressbar" aria-valuenow=" @Model.progress "
                     aria-valuemin="0" aria-valuemax="100" style="width:@Model.progress%">
                    <span class="sr-only">%@Model.progress </span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="form-group col-sm-6">
        <label for="progress" class="col-sm-2 form-control-label">Adı:</label>
        <div class="col-sm-10">
            @Model.name
        </div>
    </div>

    <div class="form-group col-sm-6">
        <label for="proje" class="col-sm-2 form-control-label">Proje :</label>
        <div class="col-sm-10">
            @Model.project
        </div>
    </div>
</div>

<a href="/Milestone/Index" class="btn btn-primary">Geri Dön</a>

