@model ProjectMan.Models.Task
@{
    ViewBag.Title = "Detay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-header">
    <h2>Detay: @Model.name</h2>
</div>

<div class="form-group row">
    <div class="col-sm-12">
        <label for="taskName" class="col-sm-2 form-control-label">Görev Adı :</label>
        <div class="col-sm-10">
            @Model.name
        </div>
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-12">
        <label for="descriptionName" class="col-sm-2 form-control-label">Açıklama :</label>
        <div class="col-sm-10">
            @Model.description
        </div>
    </div>
</div>

<div class="row">
    <div class="form-group col-sm-6">
        <label for="startDatePlanned" class="col-sm-4 form-control-label">Planlanan Başlangıç Tarihi :</label>
        <div class="col-sm-8">
            @Model.startdateplanned.ToString("dd'/'MM'/'yyyy")
        </div>
    </div>

    <div class="form-group col-sm-6">
        <label for="startDateActual" class="col-sm-4 form-control-label">Gerçekleşen Başlangıç Tarihi :</label>
        <div class="col-sm-8">
            @Model.startdateactual.ToString("dd'/'MM'/'yyyy")
        </div>
    </div>
</div>

<div class="row">
    <div class="form-group col-sm-6">
        <label for="endDatePlanned" class="col-sm-4 form-control-label">Planlanan Bitiş Tarihi :</label>
        <div class="col-sm-8">
            @Model.startdateactual.ToString("dd'/'MM'/'yyyy")
        </div>
    </div>

    <div class="form-group col-sm-6">
        <label for="endDateActual" class="col-sm-4 form-control-label">Gerçekleşen Bitiş Tarihi :</label>
        <div class="col-sm-8">
            @Model.enddateactual.ToString("dd'/'MM'/'yyyy")
        </div>
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-12">
        <label for="progress" class="col-sm-2 form-control-label">İlerleme Durumu :</label>
        <div class="col-sm-10">
            <div class="progress">
                <div class="progress-bar" role="progressbar" aria-valuenow=" @Model.progress "
                     aria-valuemin="0" aria-valuemax="100" style="width:@Model.progress%">
                    <span class="sr-only">%@Model.progress </span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-12">
        <label for="proje" class="col-sm-2 form-control-label">Proje :</label>
        <div class="col-sm-10">
            @Model.project
        </div>
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-12">
        <label for="milestone" class="col-sm-2 form-control-label">Kilometre Taşı :</label>
        <div class="col-sm-10">
            @Model.milestone
        </div>
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-12">
        <label for="assingTo" class="col-sm-2 form-control-label">Atanan Kişi</label>
        <div class="col-sm-10">
            @Model.assingto
        </div>
    </div>
</div>

<a href="/Task/Index" class="btn btn-primary">Geri Dön</a>