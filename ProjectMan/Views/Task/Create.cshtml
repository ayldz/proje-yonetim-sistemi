
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-header">
    <h2>Create</h2>
</div>

<form>
    <div class="form-group row">
        <div class="col-sm-12">
            <label for="taskName" class="col-sm-2 form-control-label">Görev Adı :</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="taskName" placeholder="Yeni Task">
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-12">
            <label for="descriptionName" class="col-sm-2 form-control-label">Açıklama :</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="descriptionName" placeholder="Açıklama">
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-sm-6">
            <label for="startDatePlanned" class="col-sm-4 form-control-label">Planlanan Başlangıç Tarihi :</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="startDatePlanned" placeholder="Tarih" data-type="date">
            </div>
        </div>

        <div class="form-group col-sm-6">
            <label for="startDateActual" class="col-sm-4 form-control-label">Gerçekleşen Başlangıç Tarihi :</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="startDateActual" placeholder="Tarih" data-type="date">
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-sm-6">
            <label for="endDatePlanned" class="col-sm-4 form-control-label">Planlanan Bitiş Tarihi :</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="endDatePlanned" placeholder="Tarih" data-type="date">
            </div>
        </div>

        <div class="form-group col-sm-6">
            <label for="endDateActual" class="col-sm-4 form-control-label">Gerçekleşen Bitiş Tarihi :</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="endDateActual" placeholder="Tarih" data-type="date">
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-12">
            <label for="progress" class="col-sm-2 form-control-label">İlerleme Durumu :</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="progress" placeholder="İlerleme Durumu">
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-12">
            <label for="proje" class="col-sm-2 form-control-label">Proje :</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="proje" placeholder="Proje">
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-12">
            <label for="milestone" class="col-sm-2 form-control-label">Kilometre Taşı :</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="milestone" placeholder="Kilometre Taşı">
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-12">
            <label for="assingTo" class="col-sm-2 form-control-label">Atanan Kişi</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="assingTo" placeholder="Atanan Kişi">
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary"> Kaydet </button>
</form>